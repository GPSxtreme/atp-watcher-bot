{
	"name": "atp-watcher",
	"version": "1.0.0",
	"description": "iq-agent (atp) activity tracker",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"clean": "rimraf dist",
		"prebuild": "pnpm clean",
		"dev": "tsx src/index.ts",
		"start": "node dist/index.js",
		"lint": "biome check ./src",
		"lint:fix": "biome check --write ./src",
		"lint:fix-unsafe": "biome check --fix --unsafe",
		"format": "biome format --write ./src"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/GPSxtreme/atp-watcher.git"
	},
	"keywords": [
		"IQAI",
		"IQ-AGENTS",
		"stfu"
	],
	"author": "GPSxtreme",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/GPSxtreme/atp-watcher/issues"
	},
	"homepage": "https://github.com/GPSxtreme/atp-watcher#readme",
	"dependencies": {
		"axios": "^1.10.0",
		"axios-retry": "^4.5.0",
		"better-sqlite3": "^12.2.0",
		"dedent": "^1.6.0",
		"dotenv": "^17.2.0",
		"node-cron": "^4.2.1",
		"telegraf": "^4.16.3",
		"tsx": "^4.20.3",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.0.13",
		"@types/node-cron": "^3.0.11",
		"rimraf": "^6.0.1",
		"typescript": "^5.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"better-sqlite3"
		]
	}
}